<article class="question">
    <div class="title">
        <a href="{{question}}" target="_blank">{{title}}</a>
        <span>{{question}}</span>
    </div>
    <div class="meta">
        {{vote_count}} point(s) by {{user.name}} on
        {{created_at}}
        |
        <a href="/question/{{id}}">{{comments.length}} comment(s)</a>
    </div>
        <div>
        <button type="submit" id="up-vote-btn"></button>
    </div>
    <div>
        <button type="submit" id="down-vote-btn"></button>
    </div>
</article>